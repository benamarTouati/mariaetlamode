{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Maria et la Mode{% endblock %}


{% block content %}

    <section class="section" id="product">
        <div class="row">
        </div>
    
        <div class="container mt-5">
            <div class="row">
                <div class="col-lg-8">
                    <div class="left-images">
                    <img src="/uploads/{{product.illustration}}" alt="{{product.name}}" class="img-fluid">
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="right-content">
                        <h4>{{ product.name }}</h4>
                        <span class="price">{{ (product.price / 100)|number_format(2,',','.') }} â‚¬</span>
                        <span>{{ product.subtitle}}</span>
                        <div class="quote">
                            <i class="fa fa-quote-left"></i><p>{{ product.description}}</p>
                        </div>
                        <hr>
                        
                            <div class="total">
                                <div class="main-border-button">
                                    <span><a href="{{ path('add_to_cart', {'id':product.id}) }}">Ajouter au Panier</a></span>
                                </div>
                            </div>
                        
                    </div>
                </div>
            </div>
        </div>
        
    </section>
   
{% endblock %}
