    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="{{ path('home') }}" class="logo">
                            Maria et la Mode
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li class="scroll-to-section"><a href="{{ path('home') }}">Home</a></li>
                            <li class="scroll-to-section"><a href="{{ path('products')}}">Produits</a></li>
                            {% if app.user%}
                            <li><a href="{{ path('account') }}">Mon compte<small> ({{ app.user.firstname }})</small></a></li>
                            <li><a href="{{ path('app_logout') }}">Deconnexion</a></li>
                            <a href="{{ path('cart') }}">
