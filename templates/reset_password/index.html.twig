{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Maria et la Mode{% endblock %}

{% block content %}
<div class="container">
    <div class="container" style="margin-bottom: 150px"></div>
<div class="block-small2" >
    {% for message in app.flashes('notice') %}
        <div class="alert alert-dark">{{ message }}</div>
    {% endfor %}
    <form method="post">
        
        <h1 class="h3 mb-3 font-weight-normal">Réinitialiser mon mot de passe</h1>
        <label for="inputEmail">Votre email</label>
        <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Votre adresse email" required autofocus>
        <hr>
        <button class="button-new" type="submit">
            Valider
        </button>
        <hr>
        <p class="text-center">Ou souhaitez-vous <a href="{{ path('app_login')}}">vous connecter</a> ?</p>
    </form>
    </div>
    <div class="espace" style="margin-top:300px"></div>   
</div>
{% endblock %}

